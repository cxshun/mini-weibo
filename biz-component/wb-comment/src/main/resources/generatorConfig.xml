<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="sql" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/miniweibo" userId="root" password="root"/>

        <javaModelGenerator targetPackage="com.miniweibo.entity" targetProject="src/main/java"/>

        <table tableName="comment" domainObjectName="Comment" />
        <table tableName="reply" domainObjectName="Reply" />
    </context>
</generatorConfiguration>